<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>OpenCompanyAccount</servlet-name>
        <servlet-class>Servlets.Register.OpenCompanyAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpenCitizenAccount</servlet-name>
        <servlet-class>Servlets.Register.OpenCitizenAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpenMerchantAccount</servlet-name>
        <servlet-class>Servlets.Register.OpenMerchantAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CloseCitizenAccount</servlet-name>
        <servlet-class>Servlets.Close.CloseCitizenAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CloseEmployeeAccount</servlet-name>
        <servlet-class>Servlets.Close.CloseEmployeeAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeTransaction</servlet-name>
        <servlet-class>Servlets.Transactions.MakeTransaction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompleteTransaction</servlet-name>
        <servlet-class>Servlets.Transactions.CompleteTransaction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlets.Register.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>Servlets.Product.addProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getProducts</servlet-name>
        <servlet-class>Servlets.Product.getProducts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OpenCompanyAccount</servlet-name>
        <url-pattern>/OpenCompanyAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpenCitizenAccount</servlet-name>
        <url-pattern>/OpenCitizenAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpenMerchantAccount</servlet-name>
        <url-pattern>/OpenMerchantAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CloseCitizenAccount</servlet-name>
        <url-pattern>/CloseCitizenAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CloseEmployeeAccount</servlet-name>
        <url-pattern>/CloseEmployeeAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeTransaction</servlet-name>
        <url-pattern>/MakeTransaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompleteTransaction</servlet-name>
        <url-pattern>/CompleteTransaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getProducts</servlet-name>
        <url-pattern>/getProducts</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
